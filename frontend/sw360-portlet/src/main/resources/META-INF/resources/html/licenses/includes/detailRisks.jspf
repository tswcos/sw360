<table class="table table-bordered" id="licenseRisks">
    <colgroup>
        <col style="width: 20%;" />
        <col style="width: 60%;" />
        <col style="width: 20%;" />
    </colgroup>
    <thead>
        <tr>
            <th><liferay-ui:message key="id" /></th>
            <th><liferay-ui:message key="text" /></th>
            <th><liferay-ui:message key="category" /></th>
        </tr>
    </thead>
    <tbody>
        <core_rt:if test="${not empty licenseDetail.risks}">
            <core_rt:forEach var="risk" varStatus="status" items="${licenseDetail.risks}">
                <tr>
                  <td><sw360:out value="${risk.id}"/></td>
                  <td><sw360:out value="${risk.text}"/></td>
                  <td><sw360:out value="${risk.category.text}"/></td>
                </tr>
            </core_rt:forEach>
        </core_rt:if>
    </tbody>
</table>


<%--for javascript library loading --%>
<%@ include file="/html/utils/includes/requirejs.jspf" %>
<script>
    require(['jquery', 'bridges/datatables'], function($, datatables) {
        datatables.create('#licenseRisks', {
            order: [
                [0, 'asc']
            ],
            language: {
                paginate: {
                    previous: "<liferay-ui:message key="previous" />",
                    next: "<liferay-ui:message key="next" />"
            },
                emptyTable: "<liferay-ui:message key="no.license.risks.analysis.available" />",
                info: "<liferay-ui:message key="showing" />",
                infoEmpty: "<liferay-ui:message key="infoempty" />",
                lengthMenu: '<liferay-ui:message key="show" /> <select>'+
                '<option value="10">10</option>'+
                '<option value="25">25</option>'+
                '<option value="50">50</option>'+
                '<option value="100">100</option>'+
                '<option value="-1"><liferay-ui:message key="all" /></option>'+
                '</select> <liferay-ui:message key="entries" />',
                processing: "<liferay-ui:message key="processing" />",
                loadingRecords: "<liferay-ui:message key="loading" />",
                search: "<liferay-ui:message key="search" />",
                infoFiltered: "<liferay-ui:message key="filtered.from.max.total.entries" />",
                zeroRecords: "<liferay-ui:message key="no.matching.records.found" />"
            }
        }, [0, 1, 2], undefined, true);
    });
</script>
